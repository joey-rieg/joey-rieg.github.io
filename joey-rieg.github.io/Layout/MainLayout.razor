@inherits LayoutComponentBase
@inject IJSRuntime JS
<div class="page">
    <header class="top-row">
        <div class="header-left"></div>
        <div class="logo header-center">Joey Rieg</div>
        <div class="header-right">
            <button class="theme-toggle" @onclick="ToggleTheme">
                <span class="material-symbols-outlined">@CurrentThemeIcon</span>
            </button>
        </div>
    </header>
    <main>
        @Body
    </main>
</div>

@code
{
    private bool _isDarkTheme = true;

    private string CurrentThemeIcon => _isDarkTheme ? "light_mode" : "moon_stars";
    
    private async Task ToggleTheme()
    {
        await JS.InvokeVoidAsync("themeManager.toggleTheme");
        _isDarkTheme = !_isDarkTheme;
    }
}
